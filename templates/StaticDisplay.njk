{% macro render() %}
  <table class="fuel-static-table fuel-alignment-{{config.alignment}}">
    <tbody>
      {% for station in stations %}
        <tr class="fuel-station-row">
          {% if config.showLogo %}
          <td class="fuel-logo-cell">
            {% if station.logoUrl %}
              <img class="fuel-static-logo" src="{{ station.logoUrl }}" alt="{{ station.logoUrl }}" />
            {% endif %}
          </td>
          {% endif %}
          <td class="fuel-static-station-location{% if station.isClosingSoon %} fuel-static-station-closing-soon{% elif not station.isOpenNow %} fuel-static-station-closed{% endif %}">{{ station.location }}</td>
          <td class="fuel-static-price{% if config.priceHighlight %} fuel-price-highlight{% endif %}">{{ utils.getPrice(station) }}</td>
          {% if config.showTankPrice %}
          <td class="fuel-static-tank-price">{{ utils.getTankPrice(station) }}</td>
          {% endif %}
          {% if config.showFuelType %}
          <td class="fuel-static-type">{{ utils.getFuelType(station) }}</td>
          {% endif %}
          {% if config.showDistance %}
          <td class="fuel-static-distance">{{ utils.getDistance(station) }}</td>
          {% endif %}
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endmacro %}
